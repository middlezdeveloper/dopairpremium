{
  "hosting": {
    "site": "dopair",
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/coach/chat",
        "function": "chatWithCoach"
      },
      {
        "source": "/assessment",
        "destination": "/assessment.html"
      },
      {
        "source": "/email-confirm",
        "destination": "/email-confirmation.html"
      },
      {
        "source": "/results",
        "destination": "/results.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  }
}