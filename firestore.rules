rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions for security
    function isAdmin() {
      return request.auth != null &&
             (request.auth.token.email == 'middlezdeveloper@gmail.com' ||
              request.auth.token.email == 'daniel@mzconsulting.com.au' ||
              request.auth.token.email == 'gmiddlez@gmail.com');
    }

    function isAuthenticated() {
      return request.auth != null;
    }

    // USER PROFILES - With admin access for approvals
    match /users/{userId} {
      // Users can create and update their own profile, OR admins can update any profile
      // Also allow system (unauthenticated) creates for webhook integration
      allow create: if
        (request.auth != null && request.auth.uid == userId) ||
        isAdmin() ||
        request.auth == null; // Allow system/webhook creates

      allow update: if
        (request.auth != null && request.auth.uid == userId) ||
        isAdmin() ||
        request.auth == null; // Allow system/webhook updates

      // Users can read their own profile, admins can read all
      allow read: if
        (request.auth != null && request.auth.uid == userId) ||
        isAdmin();

      // Only admins can delete user profiles
      allow delete: if isAdmin();
    }

    // CONVERSATIONS - For chat functionality
    match /conversations/{conversationId} {
      allow read, write: if
        request.auth != null &&
        resource.data.userId == request.auth.uid;
    }

    // ADMIN LOGS - Only admins can read/write
    match /admin_logs/{logId} {
      allow read, write: if isAdmin();
    }

    // USAGE TRACKING - Users can write their own, admins can read all
    match /usage_tracking/{trackingId} {
      allow create, update: if request.auth != null;
      allow read: if isAdmin();
    }

    // APPROVAL REQUESTS - Users can create, admins can manage
    match /approval_requests/{requestId} {
      allow create: if request.auth != null;
      allow read, update, delete: if isAdmin();
    }

    // Default deny for all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}